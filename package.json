{
  "name": "backend-node",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon",
    "lint": "eslint \"src/**/*.js\" --max-warnings=0",
    "format": "prettier --write .",
    "migrate:make": "knex --knexfile knexfile.cjs migrate:make -x js",
    "migrate:latest": "knex --knexfile knexfile.cjs migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.cjs migrate:rollback",
    "seeds": "knex --knexfile knexfile.cjs seed:run",
    "types": "tsc -p tsconfig.json --emitDeclarationOnly"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "knex": "^3.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.15",
    "pg": "^8.11.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "@asteasolutions/zod-to-openapi": "^7.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.4",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
